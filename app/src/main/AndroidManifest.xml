    package="com.jakewharton.example.adjacent"
    android:versionCode="1"
    android:versionName="1">

  <uses-sdk
      android:minSdkVersion="4"
      android:targetSdkVersion="17"/>

  <application android:label="Adjacent Fragment Pager Sample">

    <activity
        android:name="com.jakewharton.example.ExampleActivity"
        android:label="Adjacent Fragments"
